<Window x:Class="AntivirusChooser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntivirusChooser"
        mc:Ignorable="d"
        Title="Antivirus Chooser" Height="450" Width="800"
        MinHeight="400" MinWidth="700">
    <Grid>
        <TextBlock Text="Выбор антивирусной программы" Style="{StaticResource TextBlockHeaderStyle}"/>

        <!-- Начать -->
        <StackPanel x:Name="StackPanelStart" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="ButtonStartSurvey" Content="Начать опрос" Click="ButtonStartSurvey_Click" />
        </StackPanel>
        <!-- Опрос -->
        <ContentControl x:Name="ContentControlSurvey" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
